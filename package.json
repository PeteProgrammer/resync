{
  "name": "re-sync",
  "description": "Async support library for Reason/Bucklescript ",
  "version": "0.4.0",
  "scripts": {
    "build": "bsb -make-world -verbose",
    "watch": "bsb -make-world -w",
    "clean": "bsb -clean-world -verbose",
    "test:run": "respect",
    "test": "run-s clean build test:run",
    "test:watch": "nodemon node_modules/re-respect/bin/respect",
    "dev": "run-p watch test:watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeteProgrammer/resync.git"
  },
  "keywords": [
    "reason",
    "bucklescript",
    "async"
  ],
  "bugs": {
    "url": "https://github.com/PeteProgrammer/resync/issues"
  },
  "homepage": "https://github.com/PeteProgrammer/resync#readme",
  "license": "MIT",
  "devDependencies": {
    "bs-platform": "2.0.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.2",
    "re-respect": "0.0.9"
  }
}
